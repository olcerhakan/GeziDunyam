@model List<Category>
@{
    ViewBag.Title = "Kategoriler";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kategorileri Yönet</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table data-table="true" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Kategori Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CategoryName</td>
                        <td>Düzenle | Sil</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card --> 