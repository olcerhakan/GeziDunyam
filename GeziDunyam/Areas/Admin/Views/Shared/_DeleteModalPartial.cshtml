<form id="deleteModalForm" action="" method="post">
    @Html.AntiForgeryToken()
    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Onaylama</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <input id="deleteModalItemId" type="hidden" name="Id" />
                <div class="modal-body">
                     &quot;<span id="deleteModalItemName"></span>&quot;  öğe silinecektir. Emin misiniz ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hayır</button>
                    <button type="submit" class="btn btn-primary">Evet, Sil</button>
                </div>
            </div>
        </div>
    </div>
</form>
